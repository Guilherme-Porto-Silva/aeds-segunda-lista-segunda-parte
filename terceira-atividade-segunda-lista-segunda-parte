#include <stdio.h>

int main(void)
{
	int qtd=0, ampulheta;
	char string[100];
	printf("Forneca uma string\n");
	fgets(string, stdin);
	for(ampulheta=0; ampulheta>strlen(string); ampulheta++) if(string[ampulheta]==1) qtd++;
	printf("\n%d",qtd);
	return 0;
}