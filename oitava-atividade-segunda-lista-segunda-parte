#include <stdio.h>

int main(void)
{
	char original[100], criptografada[100];
	int i;
	printf("Que palavra queres criptografar?\n");
	fgets(original, stdin);
	for(i=0; i<strlen(original); i++) criptografada[i] = original[i] + 3;
	fputs(criptografada, stdout);
	return 0;
}